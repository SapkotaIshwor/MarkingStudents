<Page x:Class="CWAD.Import"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CWAD"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Import">

    <Grid Background="LightGray">
        <TextBox x:Name="txtImport" HorizontalAlignment="Center" Margin="0,0,300,200" Height="36" TextWrapping="Wrap" VerticalAlignment="Center" Width="500"/>
        <Button x:Name="btnImportDetails" Content="Import and Save to XML" Margin="500,0,0,200" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Click="btnRecordDetails_Click"/>
        <Label Content="If you want to import file containing the Student Details; just press the 'Import and Save to XML' Button." FontSize="16" HorizontalAlignment="Center" Margin="0,0,70,350" VerticalAlignment="Center"/>
        <Label Content="Note: The file to be imported should be in .csv format." Margin="0,350,400,0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
