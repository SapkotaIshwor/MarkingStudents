<Page x:Class="CWAD.TotalStudents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CWAD"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="TotalStudents">

    <Grid Background="LightGray">
        <Label Content="Generate Report to see total number of Students Enrolled:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,490,400"/>
        <Button x:Name="btnWeeklyReport" Content="Generate Report" Margin="0,0,0,400" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Click="btnWeeklyReport_Click"/>
        <DataGrid x:Name="dataGridWeeklyReport" CanUserAddRows="False"  HorizontalAlignment="Center" Margin="0,100,50,0" Height="350" VerticalAlignment="Center" Width="750"/>
        <Label Content="Total number of Students Enrolled:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,620,300"/>

    </Grid>
</Page>
