<Window x:Class="ApplicationDevelopmentCw1.ExcelData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationDevelopmentCw1"
        mc:Ignorable="d"
        Title="ExcelData" Height="452.364" Width="717.273" ResizeMode="NoResize">
    <Grid Margin="0,0,0,48" HorizontalAlignment="Left" Width="707">
        <Button x:Name="btnImportData" Content="Import File" HorizontalAlignment="Left" Margin="570,10,0,0" VerticalAlignment="Top" Width="137" Height="36" Click="BtnImportData_Click"/>
        <DataGrid x:Name="excelDataGrid" Height="278" Margin="-2,46,-42,0" VerticalAlignment="Top" IsReadOnly="True" HorizontalAlignment="Left" Width="709" AlternatingRowBackground="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" RowHeaderWidth="{DynamicResource {x:Static SystemParameters.CaptionHeightKey}}"/>
        <Button x:Name="btn_saveDataToXml" Content="Save Data" HorizontalAlignment="Left" Margin="572,329,0,0" VerticalAlignment="Top" Width="135" Height="36" Click="saveDataToXml"/>

    </Grid>
</Window>
