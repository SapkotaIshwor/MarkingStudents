<Window x:Class="CourseWorkSample.Chart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkSample"
		xmlns:DVC ="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="Chart" Height="450" Width="800">

	<Grid>
		<DVC:Chart>
			<DVC:PieSeries x:Name="chartgrd" IndependentValueBinding="{Binding Path=Key}"  
            DependentValueBinding="{Binding Path=Value}"></DVC:PieSeries>

		</DVC:Chart>
		<Label Content="Weekly Report Pie-Chart" HorizontalAlignment="Left" Margin="199,0,0,0" VerticalAlignment="Top" Width="286" Height="41" FontSize="24"/>


	</Grid>
</Window>
