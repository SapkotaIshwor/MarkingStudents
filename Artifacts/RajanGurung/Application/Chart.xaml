<Window x:Class="CourseworkAppDevelopment.Chart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
      xmlns:local="clr-namespace:CourseworkAppDevelopment"
      mc:Ignorable="d"
      Title="PieChart" Height="756.4" Width="1008.2">
    <Grid>
        <DVC:Chart Background="#FF6CA57B" >
            <DVC:PieSeries x:Name="display_pie_chart" IndependentValueBinding ="{Binding Path=Key}"
                           DependentValueBinding="{Binding Path=Value}" Margin="45,10,104,104.6" ContextMenuClosing="display_pie_chart_ContextMenuClosing">
            </DVC:PieSeries>
        </DVC:Chart>
        <Button x:Name="btnChartBack" Content="Back" HorizontalAlignment="Left" Margin="55,625,0,0" VerticalAlignment="Top" Width="160" Height="44" Click="btnChartBack_Click" FontFamily="Arial" FontSize="18"/>
    </Grid>

</Window>