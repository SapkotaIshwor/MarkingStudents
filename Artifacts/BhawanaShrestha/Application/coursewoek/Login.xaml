<Window x:Class="coursewoek.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coursewoek"
        mc:Ignorable="d"
        Title="Login" Height="150" Width="250">
    <Grid>
        <Label x:Name="luname" Content="Username" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lpw" Content="Password" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.539,1.175"/>
        <TextBox x:Name="txtuname" HorizontalAlignment="Left" Height="23" Margin="111,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtpw" HorizontalAlignment="Left" Height="23" Margin="111,44,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnlogin" Content="Login" HorizontalAlignment="Left" Margin="111,78,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0,0.662" Click="btnlogin_Click"/>
        <Button x:Name="btnlogincancel" Content="Cancel" HorizontalAlignment="Left" Margin="181,78,0,0" VerticalAlignment="Top" Width="50" Click="btnlogincancel_Click"/>

    </Grid>
</Window>
