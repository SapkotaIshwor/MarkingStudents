<Window x:Class="StudentInformationSystem.DisplayChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"

        xmlns:local="clr-namespace:StudentInformationSystem"
        mc:Ignorable="d"
        Title="DisplayChart" Height="450" Width="800" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>

        <DVC:Chart Canvas.Top="80" Canvas.Left="10" Name="StudentsEnrollmentChart">
            <DVC:PieSeries x:Name="pieChart" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}" FontSize="16" Height="326" Margin="10,0,12,11" VerticalAlignment="Bottom" RenderTransformOrigin="0.499,-0.037">

            </DVC:PieSeries>

        </DVC:Chart>
        <TextBlock Height="29" HorizontalAlignment="Center" Margin="10,10,68,0" Name="LoginHeading" Text="Student Enrollment Chart" VerticalAlignment="Top" FontSize="20" FontStretch="ExtraCondensed" Width="714" FontWeight="Bold" TextAlignment="Center"/>
    </Grid>
</Window>
