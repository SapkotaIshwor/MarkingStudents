<Window x:Class="ApplicationDevelopmentCW.Chart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationDevelopmentCW"
        xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        
        mc:Ignorable="d"
        Title="Chart" Height="544.286" Width="800" Background="LightPink">
    <Grid>
        <DVC:Chart Background="LightPink" Title="ReportChart" >

            <DVC:PieSeries x:Name="pieChart" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}">

            </DVC:PieSeries>
        </DVC:Chart>
        <Button Content="EXIT" HorizontalAlignment="Left" Margin="660,14,0,0" VerticalAlignment="Top" Width="104" Height="38" FontSize="16" Background="LightSkyBlue" Click="Button_Click"/>
    </Grid>

</Window>
