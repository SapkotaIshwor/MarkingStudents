<Window x:Class="ApplicationDevelopmentCW.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationDevelopmentCW"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="600">
    <Grid Margin="0,0,0.2,-0.2">
        <Grid Background="LightPink">
            <Border BorderBrush="Black"  BorderThickness="0" HorizontalAlignment="Left" Height="271" Margin="59,61,0,0" VerticalAlignment="Top" Width="265">
                <Label Content="Password" HorizontalAlignment="Center" Margin="16,112,23.8,0" VerticalAlignment="Top" Height="37" Width="225" FontSize="18" />

            </Border>

            <Button Content="Login" BorderThickness="0" FontSize="18" Padding="1" HorizontalAlignment="Left" Margin="74,271,0,0" VerticalAlignment="Top" Width="99" RenderTransformOrigin="0.348,0.809" Height="40" Foreground="#FFFDF7F7" FontWeight="Bold" Click="Button_Click" Background="LightSkyBlue"/>
            <TextBox x:Name="textBox1" HorizontalAlignment="Left" 
                Padding="5" FontSize="18" Height="40" Margin="74,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="225" Panel.ZIndex="1" RenderTransformOrigin="0.5,0.5" FontFamily="Arial" Foreground="#FF443636"/>
            <PasswordBox x:Name="textBox2" HorizontalAlignment="Left" 
                Padding="5" FontSize="18" Height="38" Margin="74,208,0,0"  VerticalAlignment="Top" Width="225" Panel.ZIndex="1" RenderTransformOrigin="0.5,0.5" FontFamily="Arial" TextOptions.TextFormattingMode="Display" TextOptions.TextHintingMode="Animated">
                <PasswordBox.Effect>
                    <BlurEffect/>
                </PasswordBox.Effect>
            </PasswordBox>
            <Label Content="Username" HorizontalAlignment="Center" Margin="74,77,296.2,0" VerticalAlignment="Top" Height="36" Width="225" FontSize="18" />
            <Button Content="Exit" BorderThickness="0" FontSize="18" Padding="1" HorizontalAlignment="Left" Margin="205,271,0,0" VerticalAlignment="Top" Width="92" RenderTransformOrigin="0.348,0.809" Height="40" Foreground="#FFFDF7F7" FontWeight="Bold" Click="Exit_Click" Background="LightSkyBlue"/>

        </Grid>
        <Image Margin="327,96,37.8,97.2" Source="Login.png" Stretch="Fill"/>
    </Grid>
</Window>
