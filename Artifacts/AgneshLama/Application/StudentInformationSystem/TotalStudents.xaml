<Window x:Class="StudentInformationSystem.TotalStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TotalStudents" Height="700" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Click on show button to know total number of students. " HorizontalAlignment="Left" Margin="119,23,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnShow" Content="Show" HorizontalAlignment="Left" Margin="69,104,0,0" VerticalAlignment="Top" Width="75" FontFamily="Arial" Click="btnShow_Click" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>
        <Button x:Name="btnHome" Content="Home" HorizontalAlignment="Left" Margin="540,104,0,0" VerticalAlignment="Top" Width="75" FontFamily="Arial" Click="btnHome_Click" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="dG" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" Height="506" Width="672" ItemsSource="{Binding}" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
