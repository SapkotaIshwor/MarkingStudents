<Window x:Class="StudentInformationSystem.ImportStudentDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImportStudentDetails" Height="500" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Label Content="If you want to import Student Details click Import Button." HorizontalAlignment="Left" Margin="29,23,0,0" VerticalAlignment="Top" Width="443" FontSize="16" FontFamily="Arial" FontWeight="Bold" Height="50"/>
        <Label Content="Note: File should be in .CSV format." HorizontalAlignment="Left" Margin="281,425,0,0" VerticalAlignment="Top" FontFamily="Arial"/>
        <Button x:Name="btnImport" Content="Import" HorizontalAlignment="Left" Margin="196,134,0,0" VerticalAlignment="Top" Width="75" FontFamily="Arial" Click="Button_Click" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>
        <Button x:Name="btnHome" Content="Home" HorizontalAlignment="Left" Margin="196,183,0,0" VerticalAlignment="Top" Width="75" FontFamily="Arial" Click="btnHome_Click" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

    </Grid>
</Window>
