<Window x:Class="StudentInformationSystem.WeeklyReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInformationSystem"
        xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
       
        mc:Ignorable="d"
        Title="WeeklyReport" Height="235.19" Width="578.822">
    <Grid>
        <DataGrid x:Name="weeklygrid" HorizontalAlignment="Left" Height="179" Margin="10,10,0,0" VerticalAlignment="Top" Width="178" ItemsSource="{Binding}"/>
        <Grid HorizontalAlignment="Left" Height="179" Margin="200,10,0,0" VerticalAlignment="Top" Width="361">
            <DVC:Chart Background="Beige" Title="myChart">
                <DVC:PieSeries x:Name="piechart" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}">
                    
                </DVC:PieSeries>
            </DVC:Chart>
        </Grid>
    </Grid>
</Window>
