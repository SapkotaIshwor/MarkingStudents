<Window x:Class="Coursework.TotalNoStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework"
        mc:Ignorable="d"
        Title="TotalNoStudents" Height="300" Width="650">
    <Grid Background="#FF21C187">
        <Label Content="To see the total number of  students click on Total  Students Button." HorizontalAlignment="Left" Margin="130,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Margin="523,130,0,0" VerticalAlignment="Top" Width="97" Click="Button_Click" Background="#FF93B8B1"/>
        <Button x:Name="TotalStudents" Content="Total Students" HorizontalAlignment="Left" Margin="523,85,0,0" VerticalAlignment="Top" Width="97" RenderTransformOrigin="1.6,-2.25" Click="TotalStudents_Click" Background="#FF93B8B1"/>
        <DataGrid x:Name="StudentDataGrid" HorizontalAlignment="Left" Height="184" Margin="130,75,0,0" VerticalAlignment="Top" Width="375" ItemsSource="{Binding}" Background="#FFC7BDBD"/>
        <Label Content="Total No. Of Students" HorizontalAlignment="Left" Margin="230,5,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="190"/>

    </Grid>
</Window>
