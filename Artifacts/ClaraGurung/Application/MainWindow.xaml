<Window x:Class="Coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="650" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF21C187">
        <Label Content="Username:" HorizontalAlignment="Left" Margin="206,64,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="26" Margin="320,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="207,100,0,0" VerticalAlignment="Top" Height="26" Width="63"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="320,100,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <Label Content="Login Form" HorizontalAlignment="Left" Margin="269,10,0,0" VerticalAlignment="Top" Width="120" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnlogin" Content="Login" HorizontalAlignment="Left" Margin="285,170,0,0" VerticalAlignment="Top" Width="75" Click="btnlogin_Click" Background="#FF93B8B1" Foreground="Black"/>

    </Grid>
</Window>
