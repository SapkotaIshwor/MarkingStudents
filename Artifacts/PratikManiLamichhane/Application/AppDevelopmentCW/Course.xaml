<Page x:Class="AppDevelopmentCW.Course"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDevelopmentCW"
        mc:Ignorable="d"
        Title="Course" Height="500" Width="800" Background="White">
    <Grid>
        <Label Content="Course Name" HorizontalAlignment="Left" Margin="101,120,0,0" VerticalAlignment="Top" Height="43" Width="141" FontSize="16"/>
        <TextBox x:Name="txtCourseName" HorizontalAlignment="Left" Height="43" Margin="344,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="293"/>
        <Label Content="Display Name" HorizontalAlignment="Left" Margin="101,188,0,0" VerticalAlignment="Top" Height="43" Width="141" FontSize="16"/>
        <TextBox x:Name="txtDisplayName" HorizontalAlignment="Left" Height="43" Margin="344,188,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="293"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="130,314,0,0" VerticalAlignment="Top" Width="180" Height="54" FontSize="16" Click="SaveCourseData"/>
        <Button Content="Back to Home Page" HorizontalAlignment="Left" Margin="419,314,0,0" VerticalAlignment="Top" Width="180" Height="54" FontSize="16" Click="BackToHomePage"/>

    </Grid>
</Page>
