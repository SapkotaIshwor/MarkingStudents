<Page x:Class="AppDevelopmentCW.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDevelopmentCW"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login" Background="White">

    <Grid>
        <Label Content="User ID :" HorizontalAlignment="Left" Margin="123,158,0,0" VerticalAlignment="Top" Height="48" Width="123" FontSize="20"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="107,250,0,0" VerticalAlignment="Top" Height="48" Width="123" FontSize="20"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="51" Margin="300,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="18"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="302,244,0,0" VerticalAlignment="Top" Height="50" Width="300" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="146,36,0,0" TextWrapping="Wrap" Text="Sign in To Account" VerticalAlignment="Top" Height="66" Width="447" FontSize="48"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="200,339,0,0" VerticalAlignment="Top" Width="120" Height="43" FontSize="20" Click="LoginCheck"/>

    </Grid>
</Page>
