<Page x:Class="StudentInfoSystem.WeeklyReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentInfoSystem"
      mc:Ignorable="d" 
     d:DesignHeight="520" d:DesignWidth="900"
      Title="Weekly Report" FontFamily="Open Sans">

    <Grid Background="#FF4F5D75">
        <Label Content="Weekly Report" HorizontalAlignment="Left" Margin="352,19,0,0" VerticalAlignment="Top" Foreground="White" Height="48" Width="179" FontSize="24"/>
        <Button x:Name="ButtonReport" Margin="372,399,396,87" Content="View Weekly Report" Background="#FF2D3142" Foreground="White" RenderTransformOrigin="0.502,0.506" Click="ButtonReport_Click" />
        <DataGrid x:Name="dgFourth" HorizontalAlignment="Left" Height="262" Margin="108,97,0,0" VerticalAlignment="Top" Width="678" IsReadOnly="True" AutoGenerateColumns="False" EnableColumnVirtualization="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="580"/>
                <DataGridTextColumn Header="Total Students" Binding="{Binding TotalStudents}"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Page>
