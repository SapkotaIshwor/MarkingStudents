<Page x:Class="StudentInfoSystem.Chart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cht="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" 
      xmlns:local="clr-namespace:StudentInfoSystem"
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="900"
      Title="View Chart" FontFamily="Open Sans">

    <Page.Resources>
        <local:ReportCollection x:Key="ReportCollection"/>
    </Page.Resources>
    

    <Grid Background="#FF4F5D75">
        <cht:Chart Name="reportChart" Title="Total Number of Students in different Course" 

    Background="LightBlue">
            <cht:Chart.Series>
                <cht:ColumnSeries Title="Number of Students" 

    ItemsSource="{StaticResource ReportCollection}" 

    IndependentValueBinding="{Binding Path=cName}" 

    DependentValueBinding="{Binding Path=tStudents}">
                </cht:ColumnSeries>
            </cht:Chart.Series>
        </cht:Chart>



    </Grid>
</Page>
