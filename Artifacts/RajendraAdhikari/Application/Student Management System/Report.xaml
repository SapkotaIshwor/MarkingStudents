<Page x:Class="Student_Management_System.ViewReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Student_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="700"
      Title="Report">

    <Grid Background="#0c093c">
        <Label Content="Weekly Report" HorizontalAlignment="Left" Margin="252,31,0,0" VerticalAlignment="Top" Foreground="White" Height="48" Width="178" FontSize="25"/>
        <Button x:Name="ReportBtn" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="294,346,0,0" Content="Display Weekly Report" Background="#000" Foreground="White" Click="ReportBtn_Click" />
        <DataGrid x:Name="dg4th" HorizontalAlignment="Left" Height="212" Margin="43,114,0,0" VerticalAlignment="Top" Width="650" IsReadOnly="True" AutoGenerateColumns="False" EnableColumnVirtualization="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="400"/>
                <DataGridTextColumn Header="Total Students" Binding="{Binding TotalStudents}"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Page>

