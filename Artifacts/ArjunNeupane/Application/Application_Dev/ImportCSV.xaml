<Window x:Class="Application_Dev.ImportCSV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Dev"
        mc:Ignorable="d"
        Title="ImportCSV" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Padding="20"  Margin="20" Background="#2e3137" CornerRadius="10">
        <StackPanel>
            <TextBlock Text="Student Data" Foreground ="White" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Center" />
            <Separator></Separator>
            <DataGrid x:Name="datas" Background="#545d6a" Foreground="Black" HorizontalAlignment="Left" Height="305" Margin="10,39,0,0" VerticalAlignment="Top" Width="694" FontFamily="Arial" FontSize="13" SelectionChanged="datas_SelectionChanged"/>

            <Button x:Name="save"  Margin="256,10,254.286,0" Content="Save Record" 
                    FontWeight="Regular" FontSize="15" Padding="5" Background="#545d6a" Foreground="White" Click="saveRecord"/>

        </StackPanel>
    </Border>
</Window>
