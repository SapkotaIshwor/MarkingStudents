<Window x:Class="Application_Dev.WeeklyTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Dev"
        mc:Ignorable="d"
        Title="WeeklyTable" Height="550" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Padding="20"  Margin="20" Background="#2e3137" CornerRadius="10">
        <StackPanel>
            <TextBlock Text="Weekly Report" Foreground ="White" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Center" />
            <Separator></Separator>

            <DataGrid x:Name="weeklyReport" Background="#545d6a" Foreground="Black" HorizontalAlignment="Left" Height="305" Margin="10,39,0,0" VerticalAlignment="Top" Width="694" FontFamily="Arial" FontSize="13" />

        </StackPanel>

    </Border>
</Window>
