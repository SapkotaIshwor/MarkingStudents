<Window x:Class="AppDevCoursewrk.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDevCoursewrk"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid Background="White">
        <Label Content="Username:" HorizontalAlignment="Left" Margin="175,92,0,0" VerticalAlignment="Top" FontSize="25" FontFamily="Arial"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="175,180,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Arial"/>
        <TextBox x:Name="txtuser" HorizontalAlignment="Left" Height="40" Margin="306,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="351" FontSize="22"/>
        <Button x:Name="btnlogin" Content="Login" HorizontalAlignment="Left" Margin="376,240,0,0" VerticalAlignment="Top" Width="193" Click="Btnlogin_Click" FontSize="22"/>
        <PasswordBox x:Name="txtpass" HorizontalAlignment="Left" Margin="306,180,0,0" VerticalAlignment="Top" Width="351" Height="40" FontSize="22"/>
        <Label Content="Student Information System" HorizontalAlignment="Left" Margin="308,16,0,0" VerticalAlignment="Top" Width="320" FontSize="25"/>

    </Grid>
</Window>
