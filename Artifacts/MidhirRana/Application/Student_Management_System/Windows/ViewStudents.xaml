        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowStartupLocation="CenterScreen"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Management_System.Forms"
        mc:Ignorable="d"
        Title="ViewStudents" Height="470" Width="705.8" ResizeMode="NoResize" >
    <Grid Background="#FFFCFFD7" Margin="0,0,3.2,-0.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="519*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="StudentGridView" HorizontalAlignment="Left" Height="353" Margin="15,66,0,0" VerticalAlignment="Top" Width="666" Background="#FFF0F0F0" Grid.ColumnSpan="2" />
        <Button x:Name="btnViewByName" Content="Sort By Name" HorizontalAlignment="Left" Margin="13,16,0,0" VerticalAlignment="Top" Width="116" Height="35" Click="BtnViewByName_Click"/>
        <Button x:Name="btnViewByDate" Content="Sort By Date" HorizontalAlignment="Left" Margin="28.712,16,0,0" VerticalAlignment="Top" Width="118" Height="35" Grid.Column="1" Click="BtnViewByDate_Click"/>

    </Grid>
</Window>
