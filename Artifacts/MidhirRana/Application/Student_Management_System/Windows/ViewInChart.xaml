<Window x:Class="Student_Management_System.Windows.ViewInChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowStartupLocation="CenterScreen"
        xmlns:cht="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Management_System"
        mc:Ignorable="d"
        Title="ViewInChart" Height="450" Width="800">
    
        <Window.Resources>
            <local:ReportCollection x:Key="ReportCollection"/>
        </Window.Resources>


    <Grid Background="#FFE8EDB4">
            <cht:Chart Name="reportChart" Title="Total Number of Students in different Course" 

    Background="LightBlue">
                <cht:Chart.Series>
                    <cht:ColumnSeries Title="Number of Students" 

    ItemsSource="{StaticResource ReportCollection}" 

    IndependentValueBinding="{Binding Path=progName}" 

    DependentValueBinding="{Binding Path=totalStudents}" Background="#FFDF9292">
                    </cht:ColumnSeries>
                </cht:Chart.Series>
            </cht:Chart>

        </Grid>
</Window>
