<UserControl x:Class="Student_Management_System.Views.WeeklyReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Student_Management_System.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFFCFFD7">
        <Label Content="Weekly Report" HorizontalAlignment="Left" Margin="319,25,0,0" VerticalAlignment="Top" Foreground="White" Height="48" Width="168" FontSize="24" Background="#FF574040"/>
        <DataGrid x:Name="WeeklyGridView" HorizontalAlignment="Left" Height="262" Margin="100,97,0,0" VerticalAlignment="Top" Width="671" IsReadOnly="True" AutoGenerateColumns="False" EnableColumnVirtualization="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Course Name" Binding="{Binding ProgrammeName}" Width="580"/>
                <DataGridTextColumn Header="Total Students" Binding="{Binding TotalStudents}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnView" Content="View" HorizontalAlignment="Left" Margin="376,379,0,0" VerticalAlignment="Top" Width="95" Height="26" Click="ViewWeeklyReport_Click"/>


    </Grid>
</UserControl>
