<Page x:Class="studentManagement.weeklyReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:studentManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="weeklyReport">

    <Grid Background="Black">
        
        <Label Content="Weekly Report" HorizontalAlignment="Left" Margin="312,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="40" FontWeight="ExtraBold"/>
        <DataGrid x:Name="datagridFour" HorizontalAlignment="Left" Height="181" Margin="185,192,0,0" VerticalAlignment="Top" Width="550" AutoGenerateColumns="False" EnableColumnVirtualization="True">
            <DataGrid.Columns>
            <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="300"/>
            <DataGridTextColumn Header="Total Students" Binding="{Binding TotalStudents}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Show Report" HorizontalAlignment="Left" Margin="377,119,0,0" VerticalAlignment="Top" Width="190" Height="40" FontWeight="ExtraBold" FontSize="25" Click="ReportButton_Click"/>


    </Grid>
</Page>
