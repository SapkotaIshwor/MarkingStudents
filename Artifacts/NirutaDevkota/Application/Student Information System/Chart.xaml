<Window x:Class="Student_Information_System.Chart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Information_System"
        xmlns:cht="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        
        mc:Ignorable="d"
        Title="Chart" Height="450" Width="800">
    <Window.Resources>
        <local:ChartCollection x:Key="ChartCollection"/>
    </Window.Resources>
    

    <cht:Chart Name="ReportChart" Title="Total Number Student in Different Courses" 

    Background="LightBlue">
        <cht:Chart.Series>
            <cht:ColumnSeries Title="Total Number of Students" 

    ItemsSource="{StaticResource ChartCollection}" 

    IndependentValueBinding="{Binding Path=CourseName}" 

    DependentValueBinding="{Binding Path=TotalStudents}">
            </cht:ColumnSeries>
        </cht:Chart.Series>
    </cht:Chart>

</Window>
