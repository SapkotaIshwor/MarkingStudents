        xmlns:local="clr-namespace:StudentInformationSystem"
        mc:Ignorable="d"
        Title="WeeklyReport" Height="250" Width="370" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFC3EBFF">
        <DataGrid x:Name="WeeklyDataGrid" HorizontalAlignment="Left" Height="135" Margin="20,68,0,0" VerticalAlignment="Top" Width="324" Background="#FF94DAFC" FontFamily="Arial" FontSize="15"/>
        <Button x:Name="btnGweeklyR" Content="Generate weekly report" HorizontalAlignment="Left" Margin="69,23,0,0" VerticalAlignment="Top" Width="234" FontFamily="Arial" FontSize="20" Click="BtnGweeklyR" Background="#FF8AC0DB" FontWeight="Bold" Height="40"/>

    </Grid>
</Window>
