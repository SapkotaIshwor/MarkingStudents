<Window x:Class="ApplicationDevelopment.Chart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationDevelopment"
        xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="Chart" Height="450" Width="800">
    <Grid>
        <DVC:Chart Margin="0" Title="Pie Chart of Weekly Report">

            <DVC:PieSeries x:Name="pieChart" IndependentValueBinding="{Binding Path=Key}"  DependentValueBinding="{Binding Path=Value}">
            </DVC:PieSeries>
        </DVC:Chart>

    </Grid>
</Window>
