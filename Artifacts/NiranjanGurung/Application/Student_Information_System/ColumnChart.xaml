<Window x:Class="Student_Information_System.ColumnChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:cht="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Information_System"
        mc:Ignorable="d"
        Title="ColumnChart" Height="450" Width="800">



    <Window.Resources>
        <local:FinalReportCollection x:Key="FinalReportCollection"/>
    </Window.Resources>




    <Grid Background="DarkSeaGreen">
        <cht:Chart Name="reportChart" Title="Total Number of Students Enrolled in Different Courses" 

    Background="DarkSeaGreen" FontWeight="Bold">
            <cht:Chart.Series>
                <cht:ColumnSeries Title="No. of Students"
                                  
                            ItemsSource="{StaticResource FinalReportCollection}" 

                        IndependentValueBinding="{Binding Path=cEnrolledName}" 

                             DependentValueBinding="{Binding Path=totalStudentsEnrolled}">
                </cht:ColumnSeries>
            </cht:Chart.Series>
        </cht:Chart>



    </Grid>
</Window>
